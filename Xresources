! Rofi Theme
! State:           'bg',     'fg',   'bgalt',  'hlbg',  'hlfg'
rofi.color-normal: black,   white,  black,    black,    purple
rofi.color-urgent: black_l, yellow, black_l,  black_l,  red
rofi.color-active: black,   white,  black,    black,   purple

!                  'background', 'border', 'separator'
rofi.color-window:  black,        black,    white

! set system font
rofi.font: system_font 20

! disable separator
rofi.separator-style: none

! hide the scroll bar
rofi.hite-scrollbar: true

! set number of lines
rofi.lines: 5

! set padding
rofi.padding: 400

! set width
rofi.width: 100

! set opacity
rofi.opacity: 85

rofi.disable-history: true

i3wm.font: system_dont 12
