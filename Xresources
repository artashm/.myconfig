Xft.rgba: rgb
Xft.dpi: 180

!! Xterminal Configuration --------------------------------------------------------------
!!! Fonts
!xterm*font: -misc-ubuntu mono-medium-r-*-*-22-*-*-*-*-*-iso10646-*
!xterm*boldFont: -misc-ubuntu mono-medium-r-*-*-22-*-*-*-*-*-iso10646-*
!xterm*italicFont: -*-terminus-*-*-*-*-*-*-*-*-*-*-iso10646-*
!xterm*font: -misc-fixed-medium-r-*-*-18-*-*-*-*-*-*-*
!xterm*boldFont: -misc-fixed-medium-r-*-*-18-*-*-*-*-*-*-*

! Very surprising that now neglecting to specify font still renders
! perfect misc-fixed font. Oh, it’s so lovely.
!xterm*font: -*-*-*-*-*-*-*-100-*-*-*-60-iso10646-*
!xterm*boldFont: -*-*-*-*-*-*-*-100-*-*-*-60-iso10646-*
!xterm*italicFont: -*-*-*-*-*-*-*-100-*-*-*-60-iso10646-*

xterm.termName: xterm-256color

!xterm dimension
xterm.vt100.geometry: 80x60

! Ensure the locale is set up for UTF-8
xterm.vt100.locale: true
xterm*utf8: 1

! Make 'Alt' behave as in other terminals
xterm.vt100.metaSendsEscape: true

#define system_font Ubuntu Mono

! Configure fonts
!xterm*faceName: Ubuntu Mono
xterm*faceName: Ubuntu Mono
xterm*faceSize: 8
xterm*renderFont: true


!! Enable copy/paste.
! http://www.davidsimmons.com/soft/xtermhacks/
xterm.vt100.translations: #override <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0)


!!! Foreground
